{% extends 'back/back_base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}



<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-9">  
            <div class="row ">
                <div class='test2 col-md-12 col-lg-9'>
                    <h1>Liste des Utilisateurs</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Mot de passe</th>
                                <th>Rôle</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        {% if user.role.code == '3' %}
                            <tr>
                                
                                <td style="color: red;">{{ user.email }}</td>
                                <td style="color: red;">{{ user.password }}</td>
                                <td style="color: red;">{{ user.role }}</td>
                                <td>                               
                                    <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">Éditer</a>
                                </td>
                            </tr>
                        {% else %}
                        <tr>
                                
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.role }}</td>
                            <td>                               
                                <a href="{{ path('user_show', {'id': user.id}) }}">Voir</a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}">Éditer</a>
                            </td>
                        </tr>
                        {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun Utilisateur</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>      
</div>
    
{% endblock %}

{% extends 'back/back_base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12">  
            <div class="row ">
                <div class='test col-12'>
                    <h1>Utilisateur</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Mot de passe</th>
                                <td>{{ user.password }}</td>
                            </tr>                            
                            <tr>
                                <th>Role</th>
                                <td>{{ user.role }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Éditer</a>
                    {{ include('back/user/_delete_form.html.twig') }}
                    <a href="{{ path('user_index') }}">Revenir à la liste</a>
                </div>
            </div>
        </div>
    </div>      
</div>    
{% endblock %}

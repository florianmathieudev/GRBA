{% extends 'back/back_base.html.twig' %}

{% block title %}Éditer User{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12">  
            <div class="row ">
                <div class='test col-12'>
                    <h1>Éditer User</h1>
                    {{ form_start(userForm) }}
                    {{ form_row(userForm.email, {'attr': {'placeholder': 'Entrer un email ...'}} )}}
                    {{ form_row(userForm.username, {'attr': {'placeholder': 'Entrer un nom d\'utilisateur ...'}} )}}
                    <div class='d-none'>

                    {{ form_row(userForm.password, {'attr': {'placeholder': 'Entrer un mot de passe ...'}} )}}
                    {{ form_row(userForm.confirm_password, {'attr': {'placeholder': 'Confirmer le mot de passe ...'}} )}}
                    </div>
                    {{ form_row(userForm.role, {'attr': {'placeholder': 'Selectionner un role ...'}} )}}
                    <button class="btn">{{ button_label|default('Mettre à jour') }}</button>
                    {{ form_end(userForm)}}
                    {# {{ include('back/user/_form.html.twig', {'button_label': 'Mettre à jour'}) }} #}
                    {{ include('back/user/_delete_form.html.twig') }}
                    <a href="{{ path('user_index') }}">Revenir à la liste</a>
                </div>
            </div>
        </div>
    </div>      
</div>    

{% endblock %}

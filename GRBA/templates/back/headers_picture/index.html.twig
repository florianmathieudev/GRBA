{% extends 'back_base.html.twig' %}

{% block title %}HeadersPicture index{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12">  
            <div class="row ">
                <div class='test2 col-md-12 col-lg-9'>
                    <h1>Liste des Images des Headers</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Path</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for headers_picture in headers_pictures %}
                            <tr>
                                <td>{{ headers_picture.path }}</td>
                                <td>{{ headers_picture.name }}</td>
                                <td><img src="{{ asset('uploads/pictures/header/' ~ headers_picture.path ) }}" height="80em" ></td>
                                <td>
                                {{ include('back/headers_picture/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucune Image</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class='test col-md-12 col-lg-3'>
                    <h1>Ajouter une Images</h1>
                    {{ include('back/headers_picture/_form.html.twig') }}
            </div>
        </div>
    </div>      
</div>
{% endblock %}

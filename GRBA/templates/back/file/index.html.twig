{% extends 'back/back_base.html.twig' %}

{% block title %}File index{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row rowA">
        <div class="col-lg-9">  
            <div class="row ">
                <div class=' col-md-12 col-lg-8'>
                    <h1>Liste des Fichiers</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Path</th>
                                <th>Name</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for file in files %}
                            <tr>
                                <td>{{ file.path }}</td>
                                <td>{{ file.name }}</td>
                                <td>
                                {{ include('back/file/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucun Fichier</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class=' col-md-12 col-lg-4'>
                    <h1>Ajouter un Fichier</h1>
                    {{ include('back/file/_form.html.twig') }}
            </div>
        </div>
    </div>      
</div>
{% endblock %}

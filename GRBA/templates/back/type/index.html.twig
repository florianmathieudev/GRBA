{% extends 'back_base.html.twig' %}

{% block title %}Liste des Types{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12">  
            <div class="row ">
                <div class='test2 col-md-12 col-lg-9'>
                    <h1>Liste des Types</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Code</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for type in types %}
                            <tr>
                                <td>{{ type.title }}</td>
                                <td>{{ type.code }}</td>
{# 
                                <td><img class="col-3" src="{{asset('uploads/pictures/type/' ~  type.picture.path)}}" class="card-img-top" alt="..."></td> #}
                                <td>
                                    <a href="{{ path('type_show', {'id': type.id}) }}">Voir</a>
                                    <a href="{{ path('type_edit', {'id': type.id}) }}">Ã‰diter</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Ajouter un type</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class='test col-md-12 col-lg-3'>
                    <h1>Ajouter un Type</h1>
                    {{ include('back/type/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>      
</div>
{% endblock %}

{% extends 'back/back_base.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row ">
            <div class="col-lg-12">  
                <div class="row ">
                    <div class='test col-12'>
                        <h1>Type</h1>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Titre</th>
                                    <td>{{ type.title }}</td>
                                </tr>
                                <tr>
                                    <th>Code</th>
                                    <td>{{ type.code }}</td>
                                </tr>                            
                                <tr>
                                    <th>Image</th>
                                    <td><img class="col-3" src="{{asset('uploads/pictures/type/' ~  type.picture.path)}}" class="card-img-top" alt="..."></td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('type_edit', {'id': type.id}) }}">Éditer</a>
                        {{ include('back/type/_delete_form.html.twig') }}
                        <a href="{{ path('type_index') }}">Revenir à la liste</a>
                    </div>
                </div>
            </div>
        </div>      
    </div>    
{% endblock %}
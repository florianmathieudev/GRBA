{% extends 'back/back_base.html.twig' %}

{% block title %}Liste des Contacts{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row ">
        <div class="col-lg-12 col-md-12 ">  
            <div class="row ">
            <div class='test2 col-md-12 col-lg-9'>
                <h1>Liste des Contacts</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Numéro</th>
                            <th>Email</th>
                            <th>Adresse</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for approach in approachs %}
                        <tr>
                            <td>{{ approach.phone }}</td>
                            <td>{{ approach.email }}</td>
                            <td>{{ approach.adresse }}</td>
                            <td>
                                <a href="{{ path('approach_show', {'id': approach.id}) }}">Voir</a>
                                <a href="{{ path('approach_edit', {'id': approach.id}) }}">Éditer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun Contact</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class='test col-md-12 col-lg-3'>
                <h1>Ajoutez un Contact</h1>
                {{ include('back/approach/_form.html.twig') }}
            </div>
            </div>
        </div>
    </div>      
</div>
{% endblock %}

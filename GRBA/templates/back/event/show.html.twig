{% extends 'back_base.html.twig' %}

{% block title %}Évènement{% endblock %}

{% block body %}
    <h1>Évènement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ event.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">Revenir à la liste</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">Éditer</a>

    {{ include('back/event/_delete_form.html.twig') }}
{% endblock %}

        <div class="col-lg-12">  
            <div class="row ">
                <div class='test col-12'>
                    <h1>Footer</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ footer.id }}</td>
                            </tr>

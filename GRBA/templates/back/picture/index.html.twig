{% extends 'back_base.html.twig' %}

{% block title %}Liste des Images{% endblock %}

{% block body %}
    <h1>Liste des Images</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Chemin</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for picture in pictures %}
            <tr>
                <td>{{ picture.path }}</td>
                <td>{{ picture.name }}</td>
                <td>{{ picture.description }}</td>
                <td><img src="{{ asset('uploads/' ~ picture.path ) }}" height="80em" ></td>
                <td>
    {{ include('back/picture/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune Image</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('picture_new') }}">Ajouter une nouvelle Image</a>
{% endblock %}

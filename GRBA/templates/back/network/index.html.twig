{% extends 'base.html.twig' %}

{% block title %}Network index{% endblock %}

{% block body %}
    <h1>Network index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Facebook</th>
                <th>Twitter</th>
                <th>Instagram</th>
                <th>Linkedin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for network in networks %}
            <tr>
                <td>{{ network.id }}</td>
                <td>{{ network.facebook }}</td>
                <td>{{ network.twitter }}</td>
                <td>{{ network.instagram }}</td>
                <td>{{ network.linkedin }}</td>
                <td>
                    <a href="{{ path('network_show', {'id': network.id}) }}">show</a>
                    <a href="{{ path('network_edit', {'id': network.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('network_new') }}">Create new</a>
{% endblock %}

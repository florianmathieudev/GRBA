{% block body %}

<footer>
    <div class="container-fluid">
        <div class="row">
            <div class="contact col-lg-4 col-md-12">
                <h3>Contact</h3>
                    <ul>
                        {% for contact in contacts %}
                        <li><a href="">{{ contact.phone }}</a></li>
                        {# {% endfor %}
                        {% for contact in contacts %} #}
                        <li><a href="mailto:#">{{ contact.email }}</a></li>
                        {# {% endfor %}
                        {% for contact in contacts %} #}
                        <li><a href="https://www.google.fr/maps/place/Maison+des+Associations/@48.3022338,4.060545,17z/data=!3m1!4b1!4m5!3m4!1s0x47ee985b554ce31f:0xe61ecee0c59eec95!8m2!3d48.3022303!4d4.0627337">{{ contact.adresse }}</a></li>
                        {% endfor %}                        
                    </ul>
            </div>
            <div class="network col-lg-4 col-md-12">
                <h3>Réseaux sociaux</h3>
                    <span style="font-size: 20px; color: aliceblue;">
                        {% for network in networks %}
                            <a href="{{ network.facebook }}"><i class="fab fa-facebook-f"></i></a>
                        {% endfor %}  
                    </span>       
                                
            </div>
            <div class="about col-lg-4 col-md-12">
                <h3 id="about">A propos</h3>
                    {% for footer in footers %}
                        <p>{{ footer.text }}</p>
                    {% endfor %}  
            </div>
        </div>
        <div class="row">
            <p id="ovh">                    
                {% for footer in footers %}
                    <p>{{ footer.information }}</p>
                {% endfor %}</p>
        </div>
        <div class="row">
            <div id="us">©️2019, Corentin Tournaire, Florian Mathieu, Franck Valet</div>
            <div>
                <a href="{{ path('legalNotice') }}" class="btn btn-secondary">Mentions légales</a>
            </div>
        </div>
    </div>

</footer>

{% endblock %}


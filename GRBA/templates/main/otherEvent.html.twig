{% extends "base.html.twig" %}
{% block title %}Les autres évenements{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="cont" id="otherLastEvents">
        <h1>Prochaines Evènements</h1>
        
        {% for type in types %}  
        <div class="container-fluid otherLastEvents">
        <h2>{{ type.title }}</h2>
            
            <div id="carousel">
                <div class="your-class">
                    
                    {% for event in type.events %}
                    
                        <div class="nextEventCard">
                            <div class="nextEventCard-title">
                                <div >
                                    {{ event.date|localizeddate('none', 'none', null, null, 'EEEE dd MMMM')}}                
                                </div>
                                <div>
                                    {{ event.date ? event.date|date('H:i') : '' }}
                                </div>
                            </div>
                            <hr>
                            <div class="nextEvent-desc">
                                {{ event.description }}
                                <div class="nextEventCard-local">
                                    <span style="font-size: 1em; color: black;"><i class="fas fa-map-marker-alt"></i></span>
                                    {{ event.place }}
                                </div>
                            </div>
                            
                        </div> 
                    
                    {% endfor %}
                    
                </div>
            </div>    
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}